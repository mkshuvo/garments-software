# Development Dockerfile for .NET 8.0
FROM mcr.microsoft.com/dotnet/sdk:8.0

# Install essential tools for development and health checks
RUN apt-get update && \
    apt-get install -y \
        curl \
        wget \
        procps \
        && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Set working directory
WORKDIR /app

# Copy project file and restore dependencies
COPY GarmentsERP.API/*.csproj ./GarmentsERP.API/
RUN dotnet restore GarmentsERP.API/

# Copy source code
COPY . .

# Set proper permissions
RUN chmod -R 755 /app

# Set environment variables for development
ENV ASPNETCORE_ENVIRONMENT=Development
ENV ASPNETCORE_URLS=http://+:8080
ENV DOTNET_USE_POLLING_FILE_WATCHER=true
ENV DOTNET_WATCH_RESTART_ON_RUDE_EDIT=true
ENV DOTNET_WATCH_SUPPRESS_LAUNCH_BROWSER=true
ENV DOTNET_RUNNING_IN_CONTAINER=true

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080/api/health || exit 1

# Set working directory to the project folder
WORKDIR /app/GarmentsERP.API

# Use dotnet watch for hot reload
CMD ["dotnet", "watch", "run", "--urls", "http://0.0.0.0:8080", "--no-launch-profile"]
