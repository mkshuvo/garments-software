# Garments ERP Environment Configuration

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=GarmentsERP
POSTGRES_HOST=postgres

# JWT Configuration
JWT_SECRET=your_32_character_minimum_secret_key
JWT_ISSUER=GarmentsERP.API
JWT_AUDIENCE=GarmentsERP.Client
JWT_EXPIRE_HOURS=24

# pgAdmin Configuration
PGADMIN_EMAIL=admin@garmentserp.com
PGADMIN_PASSWORD=your_secure_password

# Redis Commander Configuration
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=your_secure_password

# Super Admin (auto-created on first startup)
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=your_secure_password
SUPERADMIN_EMAIL=superadmin@garmentserp.com

# Development Configuration
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:8080

